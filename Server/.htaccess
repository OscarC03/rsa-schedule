# RSA Schedule Manager - Configurazione Apache per Altervista
# Configurazione per routing API e sicurezza

# Abilita RewriteEngine
RewriteEngine On

# Sicurezza: nasconde file sensibili
<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

<Files "test-api.php">
    Order allow,deny
    Deny from all
</Files>

# Protezione directory config
<IfModule mod_rewrite.c>
    RewriteRule ^config/ - [F,L]
    RewriteRule ^logs/ - [F,L]
    RewriteRule ^cache/ - [F,L]
</IfModule>

# Headers di sicurezza
<IfModule mod_headers.c>
    # CORS per API
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    
    # Sicurezza generale
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Gestione richieste OPTIONS per CORS
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_METHOD} ^OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>

# Routing API - redirige richieste /api/* ai file corretti
<IfModule mod_rewrite.c>
    # API Init
    RewriteRule ^api/init/?$ api/init.php [L,QSA]
    
    # API Shifts
    RewriteRule ^api/shifts/?$ api/shifts.php [L,QSA]
    
    # API Resources
    RewriteRule ^api/resources/?$ api/resources.php [L,QSA]
    
    # API Settings
    RewriteRule ^api/settings/?$ api/settings.php [L,QSA]
    
    # API Backup
    RewriteRule ^api/backup/?$ api/backup.php [L,QSA]
    
    # API Status
    RewriteRule ^api/status/?$ api/status.php [L,QSA]
    
    # Fallback per API non trovate
    RewriteRule ^api/(.*)$ index.php [L,QSA]
</IfModule>

# Compressione per migliorare performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Cache per file statici
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/json "access plus 1 hour"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
</IfModule>

# Limiti di sicurezza
<IfModule mod_security.c>
    # Limite dimensione richieste
    SecRequestBodyLimit 10485760
    SecRequestBodyNoFilesLimit 131072
    
    # Timeout
    SecRequestBodyInMemoryLimit 131072
</IfModule>

# Gestione errori personalizzata
ErrorDocument 403 /Server/index.php
ErrorDocument 404 /Server/index.php
ErrorDocument 500 /Server/index.php

# Configurazione PHP
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value memory_limit 256M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value default_charset UTF-8
</IfModule>
